<div class="large_post_box">

	<% if flash[:error] %>
		<p><%= flash[:error] %></p>
	<% end %>

	<h3>Log In</h3>
	<%= form_tag sessions_path do %>
	<%= label_tag :username %>
	<%= text_field_tag :username %>

	<%= label_tag :password %>
	<%= password_field_tag :password %>

	<%= submit_tag "Login"%>
	<% end %>

</div>