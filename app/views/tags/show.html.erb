<% @tag.posts.each do |post| %>
	
	<div class="post_box">
		<a href="/posts/<%= post.id %>"><img class="thumbnail" src="<%= post.img_url %>"></a>
		<p><%= post.words%></p>
		<p class="post_stat"><%= post.author.username %> - <%= post.created_at%> | <a href="/posts/<%= post.id %>/edit">Edit</a></p>
	</div>

<% end %>